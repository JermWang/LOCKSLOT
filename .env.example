# ==========================================
# LOCK SLOT - PRODUCTION CONFIG (MAINNET)
# ==========================================
# Copy this file to .env.local and fill in your values
# ⚠️  NEVER commit .env.local to version control

# ------------------------------------------
# SUPABASE DATABASE
# ------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ------------------------------------------
# SOLANA NETWORK CONFIG - MAINNET
# ------------------------------------------
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Optional: comma-separated list of RPC endpoints (first one will be used)
NEXT_PUBLIC_SOLANA_RPC_URLS=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# RECOMMENDED: Use a premium RPC for production
# Helius: https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
# QuickNode: https://YOUR_ENDPOINT.solana-mainnet.quiknode.pro/YOUR_TOKEN

# ------------------------------------------
# ESCROW WALLET CONFIG
# ------------------------------------------
# Master escrow wallet private key (base58 encoded)
# ⚠️  CRITICAL: Keep this extremely secure - controls all user funds
ESCROW_WALLET_PRIVATE_KEY=

# Hot wallet for fee collection (team wallet public key)
FEE_WALLET_ADDRESS=

# Token mint address (SPL token being staked)
NEXT_PUBLIC_TOKEN_MINT=

# ------------------------------------------
# PROVABLY FAIR RNG
# ------------------------------------------
# Server seed for current epoch (rotate each epoch)
# Generate: openssl rand -hex 32
SERVER_SEED=

# Public hash commitment (publish before epoch starts)
# Generate: echo -n "$SERVER_SEED" | shasum -a 256
NEXT_PUBLIC_SERVER_SEED_HASH=

# ------------------------------------------
# GAME PARAMETERS
# ------------------------------------------
# Fee in basis points (500 = 5%)
NEXT_PUBLIC_FEE_BPS=500

# Epoch duration in seconds (1814400 = 21 days)
NEXT_PUBLIC_EPOCH_DURATION=1814400

# Min/max stake amounts (in lamports or token base units)
NEXT_PUBLIC_MIN_STAKE=1000000
NEXT_PUBLIC_MAX_STAKE=1000000000000

# ------------------------------------------
# ANALYTICS & MONITORING
# ------------------------------------------
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
SENTRY_DSN=

# ------------------------------------------
# PRODUCTION FLAGS
# ------------------------------------------
NEXT_PUBLIC_DEMO_MODE=false
# Emergency stop (blocks spin/claim/withdraw API routes)
MAINTENANCE_MODE=false
# Minimum confirmations required before crediting deposits (defaults to 32)
DEPOSIT_MIN_CONFIRMATIONS=32
NODE_ENV=production
